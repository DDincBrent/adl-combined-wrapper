{
  "name": "adl-combined-wrapper",
  "version": "1.0.0",
  "description": "Combination Wrapper for SCORM and xAPI",
  "type": "module",
  "main": "ADL_WRAPPER.js",
  "scripts": {
    "build": "webpack --config webpack.production.config.js",
    "dev": "webpack serve --config webpack.dev.config.js --hot"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "arrow-spacing": [
        "warn",
        {
          "before": true,
          "after": true
        }
      ],
      "brace-style": [
        "error",
        "allman",
        {
          "allowSingleLine": true
        }
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "comma-spacing": [
        "error",
        {
          "after": true
        }
      ],
      "curly": [
        "error",
        "multi-or-nest",
        "consistent"
      ],
      "dot-location": [
        "error",
        "property"
      ],
      "handle-callback-err": "off",
      "indent": [
        "warn",
        "tab",
		{ 
			"SwitchCase": 1,
			"ignoreComments": true 
		}
      ],
      "max-nested-callbacks": [
        "error",
        {
          "max": 4
        }
      ],
      "max-statements-per-line": [
        "error",
        {
          "max": 2
        }
      ],
      "no-console": "off",
      "no-empty-function": "warn",
      "no-floating-decimal": "error",
      "no-shadow": [
        "error",
        {
          "allow": [
            "err",
            "resolve",
            "reject"
          ]
        }
      ],
      "no-unused-vars": "warn",
      "no-var": "warn",
      "no-lonely-if": "off",
      "no-undef": "off",
      "object-curly-spacing": [
        "warn",
        "always"
      ],
      "prefer-const": "warn",
      "quotes": [
        "error",
        "single",
		{
			"allowTemplateLiterals" : true
		}
      ],
      "semi": "error",
      "no-trailing-spaces": "off",
      "space-before-blocks": [
        "error",
        "never"
      ],
      "space-before-function-paren": [
        "error",
        {
          "anonymous": "never",
          "named": "never",
          "asyncArrow": "always"
        }
      ],
      "space-in-parens": [
        "error",
        "never"
      ],
      "yoda": "warn"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DDincBrent/scorm-api-wrapper.git"
  },
  "keywords": [
    "scorm",
    "scorm-api",
    "cmi",
    "lms"
  ],
  "license": "SEE LICENSE IN LICENSE.md",
  "bugs": {
    "url": "https://github.com/DDincBrent/scorm-api-wrapper/issues"
  },
  "homepage": "https://github.com/DDincBrent/scorm-api-wrapper#readme",
  "dependencies": {
    "eslint": "^8.15.0",
    "jsdom": "^19.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.12",
    "@babel/preset-env": "^7.17.12",
    "babel-loader": "^8.2.5"
  }
}
